        // Elabore um programa que:
        //Sorteie um numero de 0 a 10
        //Solicite ao usuário em 3 tentativas qual numero ele acha que foi sorteado.
        //Caso ele acerte, apresente o numero e a quantidade de tentativas
        //Caso ele náo acerte nas 3 tentativas, avise que perdeu e informe o numero sorteado
        Random random = new Random();

        
        int numeroAleatorio = random.Next(1, 10);
        int tentativas = 1;
        
        
        Console.WriteLine("Em 3 tentativas, tente acertar o número aleatório");
        
        //Recebe a resposta do usuário
        while(true) {
            Console.WriteLine(tentativas + " " + numeroAleatorio);
            string respostaUsuario = Console.ReadLine();
            int numeroUsuario = int.Parse(respostaUsuario);

            //Caso a resposta for invalida          
            if(numeroUsuario > 10){
                Console.WriteLine("Número invalido, Tente Novamente na próxima");
                tentativas--;
            }

            //Caso a resposta esteja correta
            if(numeroAleatorio == numeroUsuario) {
                Console.WriteLine("Voce acertou! Parabéns - Tentativa:" + tentativas );
                break;
            }

            //Caso a tentativa esteja incorreta
            else {
                Console.WriteLine("Errou! Tente novamente na próxima.");
            }
            tentativas++;
            //Encerra o laço caso as tentativas atinjam o limite selecionado
            if(tentativas == 4) {
                break;
            }
        }
        
    }
}
